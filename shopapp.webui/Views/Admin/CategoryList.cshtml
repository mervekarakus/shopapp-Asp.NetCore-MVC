@model CategoryListViewModel
@using shopapp.webui.Models

<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Kategori Ekle</h1>
        <hr>
        <a class="btn btn-primary btn-sm" href="/admin/categories/create">Kategori Ekle</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 30px;">Id</td>
                    <td>İsim</td>
                    <td style="width: 150px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Categories.Count > 0)
                {
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.Name</td>
                            <td>
                                <a href="/admin/categories/@item.CategoryId" class="btn-primary btn-sm mr-2">Düzenle</a>

                                <form action="/admin/deletecategory" method="POST" style="display: inline;">
                                    <input type="hidden" name="categoryId" value="@item.CategoryId">
                                    <button type="submit" class="btn btn-primary btn-sm">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>Kategori Bulunamadı!</h3>
                    </div>
                }


            </tbody>
        </table>
          <footer class="py-5 bg-white text-white text-center col-md-12" style=" position: relative"> </footer>
    </div>
</div>