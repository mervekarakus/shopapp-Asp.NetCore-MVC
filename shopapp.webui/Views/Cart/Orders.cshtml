@model List<OrderListModel>
@using shopapp.webui.Models

<h1>Siparişlerim</h1>
<hr>

@foreach (var order in Model)
{
    <table class="table table-bordered table-sm mb-3">
        <thead class="">
            <tr>
                <td colspan="2">Sipariş Id: #@order.OrderNumber</td>
                <th>Fiyat</th>
                <th>Adet</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in order.OrderItems)
            {
                <tr>
                    <td><img src="~/img/@orderItem.ImageUrl" alt="" width="50"></td>
                    <td>
                        @orderItem.Name
                    </td>
                    <td>@orderItem.Price</td>
                    <td>@orderItem.Quantity</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">Müşteri Adı:</td>
                <td>@order.FirstName @order.LastName</td>
                <td rowspan="6">Toplam: @order.TotalPrice().ToString("c")</td>
            </tr>
            <tr>
                <td colspan="2">Adress: </td>
                <td>@order.Adress</td>
            </tr>
              <tr>
                <td colspan="2">Email: </td>
                <td>@order.Email</td>
            </tr>
              <tr>
                <td colspan="2">Telefon: </td>
                <td>@order.Phone</td>
            </tr>
              <tr>
                <td colspan="2">Sipariş Durum: </td>
                <td>@order.OrderState</td>
            </tr>
               <tr>
                <td colspan="2">Ödeme türü </td>
                <td>@order.PaymentType</td>
            </tr>
        </tfoot>
    </table>
}
